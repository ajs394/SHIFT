<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= $engine.title %></h1>
    <a href="<%= url_for :action => :engindex %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= $engine.object %>"/> 
          <div data-role="fieldcontain">
            <label for="engine[Name]" class="fieldLabel">Engine Name: </label>
            <input type="text" id="engine[Name]" name="engine[Name]" <%= placeholder("Name") %> />
          </div>
          <div data-role="fieldcontain">
            <label for="engine[URL]" class="fieldLabel">Url: </label>
            <input type="text" id="engine[URL]" name="engine[URL]" <%= placeholder("URL") %> />
          </div>
          
          <% (1..Integer($engine.count)).each do |i| %>
            <div data-role="fieldcontain">
              <label for="engine[key<%= i %>]" class="fieldLabel">Term Name <%= i %>:</label>
              <input type="text" id="engine[key<%= i %>]" name="engine[key<%= i %>]" <%= placeholder("Name") %> />
            </div>      
                          
            <div data-role="fieldcontain">
              <label for="engine[val<%= i %>]" class="fieldLabel">REST Name <%= i %>:</label>
              <input type="text" id="engine[val<%= i %>]" name="engine[val<%= i %>]" <%= placeholder("Name") %> />
            </div> 
          <% end %>
      
          
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
