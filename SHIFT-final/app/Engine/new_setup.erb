<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= $engine.title %></h1>
    <a href="<%= url_for :action => :engindex %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :new %>">
      <input type="hidden" name="id" value="<%= $engine.object %>"/>
          <div data-role="fieldcontain">
            <p>How many attributes will this engine have?  (other than url and name): </p>
              <input type="text" id="engine[count]" name="engine[count]" <%= placeholder("Count") %> />
          </div>
      <input type="submit" value="Make New"/>
    </form>
  </div>

</div>
