<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @engine.name %></h1>
    <a href="<%= url_for :action => :show, :id => @engine.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @engine.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @engine.object %>"/>
      
        <% @hash.each_pair do |name, value| %>
          <div data-role="fieldcontain">
            <label for="engine[<%= name %>]" class="fieldLabel"><%= name %>:</label>
            <input type="text" id="engine[<%= name %>]" name="engine[<%= name %>]" value="<%= value %>" <%= placeholder( "Name" ) %> />
          </div>
        <% end %>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
